---
/*import MobileNav from './mobile-nav.astro';*/
import Logo from './logo.astro';
---

<header>
  <a class="logo" aria-label="Move to first page" href="/">
    <Logo />
  </a>
  <nav>
    <ul>
      <li><a href="/about">About us</a></li>
      <li><a href="/product">Product</a></li>
    </ul>
    <!--<div class="mobile-nav">
      <MobileNav />
    </div>-->
  </nav>
</header>

<style>
  header {
    display: flex;
    justify-content: center;
    align-items: center;
    width: var(--container-width);
    margin-inline: auto;
    padding: 2rem 0;
    justify-content: center;
  }

  header .logo {
    width: 100%;
    max-width: 100px;
  }

  nav {
    display: flex;
    list-style: none;
    gap: 1rem;
    align-items: center;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 1rem;
  }

  nav ul li {
    font-size: rem;
  }

  nav ul li a {
    color: inherit;
    text-decoration: none;
  }

  @media (hover) {
    nav ul li a:hover {
      text-decoration: underline;
      text-decoration-skip-ink: none;
      text-decoration-thickness: 0.125em;
      text-underline-offset: 0.2em;
    }
  }

  nav ul li:first-child {
    margin-left: 0;
  }

  .mobile-nav {
    display: none;
  }

  @media (max-width: 480px) {
    header nav ul li:not(.emphasis) {
      display: none;
    }

    .mobile-nav {
      display: block;
    }
  }

  .broadcast {
    width: var(--container-width);
    margin-inline: auto;
  }

  .broadcast .icon {
    min-width: 1.5rem;
    color: hsl(var(--blue-base) 20%);
  }

  .broadcast > .broadcast-content {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    background-color: hsl(var(--blue-base) 90%);
    padding-inline: 1rem;
    border-radius: 0.6rem;
    margin-top: 1rem;

    color: hsl(var(--blue-base) 20%);
    font-size: 0.9rem;
  }
</style>